{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "eqeqeq": "warn",
        "no-throw-literal": "warn",
        "quotes": [
            "error",
            "single"
        ],
        "semi": "warn",
        "indent": [
            "error",
            4
        ],
        "space-before-blocks": "error",
        "keyword-spacing": "warn",
        "object-curly-spacing": [
            "warn",
            "always"
        ],
        "newline-after-var": [
            "warn",
            "always"
        ],
        "newline-before-return": "error"
    }
}
